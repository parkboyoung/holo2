<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLO"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="TO MAKE YOU \n NOT FEEL LONELY ANYMORE"
        android:breakStrategy="balanced"
        android:textAlignment="center"
        android:id="@+id/message"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/okay"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="확인->로그인화면"
        android:onClick="onOkayClicked"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/late"
        android:layout_alignStart="@+id/linearLayout" />

    <Button
        android:id="@+id/late"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="나중에하기->메인화면"
        android:onClick="onLateClicked"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/okay" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/createEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일" />

        <EditText
            android:id="@+id/createNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임" />

        <EditText
            android:id="@+id/createPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/checkPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
